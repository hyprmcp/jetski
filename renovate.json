{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "npm",
        "github-actions",
        "gomod",
        "dockerfile",
        "docker-compose",
        "mise"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchManagers": [
        "npm",
        "github-actions",
        "gomod",
        "dockerfile",
        "docker-compose"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "description": "Schedule noisy deps on Monday morning (6 AM - 9 AM)",
      "matchPackageNames": [
        "posthog-js",
        "@sentry/*",
        "@fontsource/*"
      ],
      "schedule": [
        "* 6-9 * * 1"
      ]
    },
    {
      "extends": [
        "monorepo:opentelemetry-go"
      ],
      "groupName": "opentelemetry-go monorepo",
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor",
        "major"
      ]
    },
    {
      "extends": [
        "monorepo:opentelemetry-go-contrib"
      ],
      "groupName": "opentelemetry-go-contrib monorepo",
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor",
        "major"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "matchPackagePatterns": [
        "^@spartan-ng/"
      ],
      "groupName": "@spartan-ng packages",
      "description": "Group all @spartan-ng dependencies together"
    }
  ]
}
